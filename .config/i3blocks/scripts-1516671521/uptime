. ~/.config/i3blocks/cores.conf

uptime=$(</proc/uptime)
uptime=${uptime%%.*}

s=$(( uptime%60 ))
m=$(( uptime/60%60 ))
h=$(( uptime/60/60%24 ))
d=$(( uptime/60/60/24 ))

echo "${d}d${h}h${m}m"
echo "${d}d${h}h${m}m"
echo "$roxo"
