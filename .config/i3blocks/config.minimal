command=~/.config/i3blocks/scripts/$BLOCK_NAME
separator=false
separator_block_width=10
border_top=0
border_left=0
border_right=0
border_bottom=0

[cpu_usage]
label=
interval=1

[mem]
label=
interval=1

[disk]
label=
interval=30

[temperature]
label=
interval=10

[volume]
instance=Master
interval=1
signal=10

[hora]
label=
interval=5

[i3blockstheme]
interval=once

[wallpaper]
interval=once

[screencast]
interval=5

[screenshot]
command=bash -c 'echo "  "; echo "  "; echo ""; if [ "$BLOCK_BUTTON" == 1 ]; then bash ~/.config/rofi/scripts/screenshot &> /dev/null; fi'
interval=once
